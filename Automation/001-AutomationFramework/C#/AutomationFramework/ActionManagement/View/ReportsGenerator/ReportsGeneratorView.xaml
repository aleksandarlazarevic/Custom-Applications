<UserControl x:Class="ActionManagement.View.ReportsGenerator.ReportsGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ActionManagement.View.ReportsGenerator"
             mc:Ignorable="d" Background="{StaticResource RightPaneBackground}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="HeaderStyle" TargetType="DataGrid">
            <Setter Property="ColumnHeaderStyle" Value="{DynamicResource HeaderColumnStyle}"></Setter>
        </Style>
        <Style x:Key="UserControlStyle" TargetType="UserControl">
            <Setter Property="Background" Value="{DynamicResource AMBrightBlue}"></Setter>
        </Style>
        <Style x:Key="HeaderColumnStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Height" Value="20" />
            <Setter Property="Background" Value="{StaticResource LeftPaneBackground}" />
            <Setter Property="Foreground" Value="{StaticResource CommonForeground}" />
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0.5,0,0.5,0"/>
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="25,29,29,0" Height="220" Width="auto" Grid.Row="0">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock x:Name="ViewNameLabel" FontSize="25" FontWeight="Bold" Foreground="{StaticResource CommonForeground}" 
                      VerticalAlignment="Center" HorizontalAlignment="Left">Reports Generator</TextBlock>
                <ComboBox x:Name="ChooseConfigDropbox" Margin="0 25 0 15" MinWidth="200px" 
                          VerticalAlignment="Bottom" HorizontalAlignment="Left"
                          ItemsSource="{Binding ConfigurationNames}"
                          SelectedItem="{Binding SelectedConfiguration}" 
                          Style="{StaticResource DropdownMenu}" Foreground="{StaticResource CommonForeground}"/>
                <Label x:Name="label" Content="Selected report Configuration:" Foreground="{StaticResource CommonForeground}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Content="{Binding SelectedBenchmark}" Foreground="{StaticResource CommonForeground}" 
                       HorizontalAlignment="Center" MinWidth="400" Width="auto"/>
                <DatePicker x:Name="ReportEndDate" SelectedDate="{Binding ReportEndDate}"/>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,8,0,20" VerticalAlignment="Center">
                    <Button x:Name="BrowseReportConfigsButton" Content="Browse Report Input" 
                        Width="160" Height="40" Margin="80,0,0,0"
                        Command="{Binding BrowseCsvReportCommand}"/>
                    <Button x:Name="ExportReportConfigsButton" Content="Export Report Configs" 
                        Width="160" Height="40" Margin="80,0,0,0"
                        Command="{Binding ExportCommand}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical" HorizontalAlignment="Right" Width="auto" MinWidth="150">
                <Image Source="pack://application:,,,../../Resources/img/shieldOK.png" Stretch="None"/>
            </StackPanel>
        </DockPanel>
