<Window x:Class="CryptoTradingBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoTradingBot"
        mc:Ignorable="d"
        Title="Crypto Trading Bot" Height="450" Width="800">
    <Grid>
        <ComboBox ItemsSource="{Binding CoinList}" SelectedItem="{Binding SelectedCoin}" 
                  HorizontalAlignment="Center" MinWidth="400" Width="auto" Height="40"/>
        <Button x:Name="StartTradingsButton" Margin="353,330,279,49" Content="Start Trading" 
                    Width="160" Height="40" Command="{Binding StartTradingCommand}"/>
        <Button x:Name="StopTradingsButton" Margin="591,330,41,49" Content="Stop Trading" 
                    Width="160" Height="40" Command="{Binding StopTradingCommand}"/>
        
    </Grid>
</Window>
